        "body": {
            "font_name": "Times New Roman",
            "font_size": 12,
            "bold": false,
            "italic": false,
            "color": "000000",
            "alignment": "justify",
            "line_spacing_rule": "multiple",
            "line_spacing_value": 1.5,
            "first_line_indent": 2,
            "space_before": 0,
            "space_after": 6
