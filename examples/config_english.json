            "line_spacing_value": 28,
            "first_line_indent": 0,
            "space_before": 18,
            "space_after": 6,
            "numbering_format": "section"
        },
        "heading_3": {
            "font_name": "Arial",
            "font_size": 14,
            "bold": true,
            "italic": false,
            "color": "333333",
            "alignment": "left",
            "line_spacing_rule": "multiple",
            "line_spacing_value": 1.5,
            "first_line_indent": 0,
            "space_before": 12,
            "space_after": 6,
