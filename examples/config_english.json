            "bold": true,
            "italic": false,
            "color": "000000",
            "alignment": "center",
            "line_spacing_rule": "exact",
            "line_spacing_value": 32,
            "first_line_indent": 0,
            "space_before": 24,
            "space_after": 12,
            "numbering_format": "chapter"
        },
        "heading_2": {
            "font_name": "Arial",
            "font_size": 18,
            "bold": true,
            "italic": false,
            "color": "333333",
