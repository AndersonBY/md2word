        "code": {
            "font_name": "Consolas",
            "font_size": 10,
            "bold": false,
            "italic": false,
            "color": "333333",
            "alignment": "left",
            "line_spacing_rule": "single",
            "first_line_indent": 0,
            "background_color": "f5f5f5"
        },
        "blockquote": {
            "font_name": "Times New Roman",
            "font_size": 11,
            "bold": false,
            "italic": true,
